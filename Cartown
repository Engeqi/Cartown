  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: #d0f0ff;
    }
    header {
      background: #333;
      color: white;
      text-align: center;
      padding: 10px;
    }
    #hud {
      display: flex;
      justify-content: space-around;
      background: #eee;
      padding: 10px;
      font-weight: bold;
    }
    #garage, #race {
      display: none;
      text-align: center;
      padding: 20px;
    }
    #garage img {
      width: 200px;
    }
    button {
      padding: 10px 20px;
      margin-top: 20px;
      font-size: 16px;
      cursor: pointer;
    }
    #raceArea {
      position: relative;
      height: 150px;
      background: #aaddaa;
      border: 2px solid #333;
      overflow: hidden;
    }
    #car {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100px;
      transition: left 0.5s linear;
    }
  </style>
